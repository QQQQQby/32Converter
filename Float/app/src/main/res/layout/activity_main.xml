<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.afloat.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decimalHint"
        android:textSize="@dimen/textFont" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="必须是浮点数"
        android:background="@color/Error"
        android:visibility="gone"
        android:id="@+id/decimalError"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decimalNumber"
        android:digits="@string/decimalDigits"
        android:textSize="@dimen/numFont"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/floatHint"
        android:textSize="@dimen/textFont" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/floatingPointNumber"
        android:digits="@string/floatDigits"
        android:maxLength="32"
        android:textSize="@dimen/numFont"/>

</LinearLayout>
